<?xml version="1.0"?>
<openerp>
	<data>
		<!-- Vista -->
		<record model="ir.ui.view" id="view_userstory_form">
			<field name="name">user.story.form</field>
			<field name="model">user.story</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="User Story">
					<field name="name" />
					<field name="owner" />
					<field name="planned_hours" />
					<field name="project_id" />
					<field name="title" />
					<field name="accep_crit_ids" />
					<field name="info" />
					<field name="task_ids" />
					<field name="date" />

				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_userstory_tree">
			<field name="name">user.story.tree</field>
			<field name="model">user.story</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="User Story" >
					<field name="name" />
					<field name="owner" />
					<field name="planned_hours" />
					<field name="project_id" />
					<field name="title" />
					<field name="accep_crit_ids" />
					<field name="info" />
					<field name="task_ids" />
					<field name="date" />
				</tree>
			</field>
		</record>

		
		<record model="ir.actions.act_window" id="action_user_story">
			<field name="name">action.user.story</field>
			<field name="res_model">user.story</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_userstory_form"/>

		</record>
		
		<menuitem 
			parent="project_scrum.menu_scrum" 
			id="menu_action_user_story" 
			action="action_user_story"/>
		
	</data>
</openerp>
